<h4>Amostragens</h4>

<div class="center-align">
  <%= paginate @samplings, views_prefix: 'paginator' %>
  <small><%= page_entries_info @samplings %></small>
</div>

<table>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Data</th>
      <th>Qtd Prod</th>
    </tr>
  </thead>

  <tbody>
    <% @samplings.each do |sampling| %>
      <tr>
        <td><%= link_to sampling.product.name, sampling %></td>
        <td><%= sampling.data.strftime("%d/%m/%Y")  %></td>
        <td><%= sampling.quantidade_produzida %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="fixed-action-btn">
  <%= link_to new_sampling_path, class: "btn-floating btn-large waves-effect waves-light red" do %>
    <i class="material-icons">add</i>
  <% end %>
</div>